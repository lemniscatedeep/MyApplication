<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false">

    <TextView
        android:text="Welcome, "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:id="@+id/textView" />

    <TextView
        android:text="@string/emptyString"
        android:layout_width="wrap_content"
        android:id="@+id/TVusername"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Purpose of loan?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loan_purpose" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loanType"
        android:gravity="center_vertical|start" />

    <TextView
        android:text="Total amount required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loan_amount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Enter the amount"
        android:id="@+id/editText_amount" />

    <TextView
        android:text="Permanent address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:hint="Enter permanent address"
        android:id="@+id/address" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectState" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectCity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="PIN CODE"
        android:id="@+id/editText_pincode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenure of loan"  />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Tenure_years" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Tenure_months" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Residence Type"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup">
        <RadioButton
            android:text="House"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbclick"
            android:id="@+id/radioButtonHouse" />
        <RadioButton
            android:text="Apartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbclick"
            android:id="@+id/radioButtonApartment" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_gravity="right"
        android:onClick="onButtonClick"
        android:id="@+id/buttonContinue"/>

</LinearLayout>
